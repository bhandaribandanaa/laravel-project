<?php $__env->startSection('footer_js'); ?>
  <script>
    $(function(){
      $("#day").change(function(){
          var day = $(this).val();
          var doctor_id = <?php echo $doctor->id; ?>;
          var url = "<?php echo e(url('doctors/getShift')); ?>/"+doctor_id+"/"+day;
          $.ajax({
            type: "GET",
            url: url,
            datatype: "json",
            success: function(data){
              var obj = jQuery.parseJSON(data);
              if(obj.status == "success"){
                  
                  var shift = "";
                  shift = "<select id='shift' name='shift' class='form-control' >";
                  $.each( obj.value, function(key,val) {
                    shift += '<option value="'+val.shift+'">'+val.shift+'</option>'; 
                  });
                  shift += "</select>";  

                $("#shiftDiv").html(shift);
              }else{
                  var shift = "";
                  shift = "<select id='shift' name='shift' class='form-control' ><option value='' selected> No Shift Found </option></select> ";
                  $("#shiftDiv").html(shift);
              }
            }
          });
      });
    });

  </script>
