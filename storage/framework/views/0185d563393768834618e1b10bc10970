<?php $__env->startSection('footer_js'); ?>
    <script src="<?php echo e(asset('backend/plugins/moment/min/moment.min.js')); ?>"></script>
    <script src="<?php echo e(asset('fullCalender/fullcalendar.min.js')); ?>"></script>
    <script src="<?php echo e(asset('zabuto_calender/zabuto_calendar.js')); ?>"></script>
    <script type="application/javascript">
        $(document).ready(function () {
            var events = "<?php echo e($result); ?>";
            var url = "<?php echo e(url('api/doctors/getAppointment')); ?>";
            var slug = "<?php echo e($doctor->slug); ?>";
            var sender_id = "<?php echo e($sender_id); ?>";
            var string = events.replace(/&quot;/g, '"');
            var obj = JSON.parse(string);
            console.log(obj);
            $("#my-calendar").zabuto_calendar({
                data: obj,
                action: function() {
                    if($(this).attr('class') == 'dow-clickable event') {
                        id = this.id;
                        var date = id.split("_").pop(-1);
                        window.open(url + '/' + slug + '/' + date + '/' + sender_id, "_self");
                    }else{
                        return false;
                    }

                }
            });


        });
    </script>

