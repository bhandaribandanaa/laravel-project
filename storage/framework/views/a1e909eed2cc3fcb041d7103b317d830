    <script src="<?php echo e(asset('datepicker.min.js')); ?>"></script>
    <script>
        $(function(){
            $(".description").summernote();
            var date = <?php echo $news->published_date; ?>;
            $("#published_date").datepicker({
                format: 'yyyy-mm-dd',
            });

            $("#removeImage").click(function(){
                var id = $(this).data("id");
                var url = "<?php echo e(url('admin/news/removeImage')); ?>/"+id;

                $.ajax({
                    type: "GET",
                    url: url,
                    datatype: "json",
                    success: function(data){
                        var obj = jQuery.parseJSON(data);
                        if(obj.status == 'success'){
                            swal({
                                title: "Success!",
                                text: "Image has been removed.",
                                imageUrl: "<?php echo e(asset('energyAdmin/img')); ?>/thumbs-up.png",
                                timer: 2000,
                                showConfirmButton: false
                            });

                            $("#newsImage").attr("src","");

                        }
                    }
                });
            });
        });
    </script>
