                    <?php if(count($contents)>0): ?>
                        <?php foreach($contents as $index=>$content): ?>
                            <tr>
                                <td><?php echo e(++$index); ?></td>
                                <td><?php echo e($content->heading); ?></td>
                                <?php /*<td><?php echo e(count($content->children)); ?></td>*/ ?>
