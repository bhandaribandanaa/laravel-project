    <script>
        $(document).ready(function () {
            $('#contentForm')

                    .formValidation({
                        framework: 'bootstrap',
                        excluded: [':disabled'],
                        icon: {
                            valid: 'glyphicon glyphicon-ok',
                            invalid: 'glyphicon glyphicon-remove',
                            validating: 'glyphicon glyphicon-refresh'
                        },
                        fields: {
                            day: {
                                validators: {
                                    notEmpty: {
                                        message: 'The day is required'
                                    }
                                }
                            },
                            shift: {
                                validators: {
                                    notEmpty: {
                                        message: 'The shift is required'
                                    }
                                }
                            },
                            time: {
                                validators: {
                                    notEmpty: {
                                        message: 'The time field is required'
                                    }
                                }
                            }                               

                        }
                    })
                    

        });
